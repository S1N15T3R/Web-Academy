{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },

    {
      "name": "(gdb) Launch", // Name of the configuration
      "type": "cppdbg", // Debugger type for C++
      "request": "launch", // Specifies that we want to launch a new process
      "program": "${workspaceFolder}/home/sinister/auth", // Update this to the path of your binary
      "args": [], // Arguments for your program (if any)
      "stopAtEntry": false, // Do not stop at entry point of the program
      "cwd": "${workspaceFolder}", // Current working directory (optional)
      "environment": [],
      "externalConsole": true, // If you want the output in an external console
      "MIMode": "gdb", // Mode for using GDB as the debugger
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "C/C++: gcc build active file", // Task to build the file before launch
      "miDebuggerPath": "/usr/bin/gdb", // Path to GDB on your system
      "targetArchitecture": "x86_64", // Target architecture (modify if necessary)
      "logging": {
        "trace": true,
        "traceResponse": true,
        "engineLogging": true
      }
    }
  ]
}
